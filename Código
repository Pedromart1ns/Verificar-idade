#include <stdio.h>
#include <locale.h>

int main(){
	setlocale(LC_ALL,"Portuguese");
	
	int idade,cont;
	
	for(cont = 1; cont <= 10; cont++){
		
		printf("Digite sua idade:");
		scanf("%d", &idade);
		
		if(idade >=18){
			printf("Você é maior de idade!\n");
		} 
		else{
			printf("Você é menor de idade!\n");
		}
	}
	return(0);
}
